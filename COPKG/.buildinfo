#product-info
{
    product-name: "uwimap";
    version: "2007f";
    original-source-location: "ftp://ftp.cac.washington.edu/mail/imap.tar.Z";
    original-source-website: "http://www.washington.edu/imap/";
    license: "Apache License 2.0";
    packager: "Rafael Rivera <rafael@withinwindows.com>";
}

default
{
    compiler: vc10;
    platform: x86;
 
    targets:
    {
      "c-client\cclient.lib",
      "imapd\imapd.exe",
      "ipopd\ipop2d.exe",
      "ipopd\ipop3d.exe",
      "mailutil\mailutil.exe",
      "mtest\mtest.exe"
    };
 
    build-command: @"
      nmake /f makefile.w2k build
    ";
 
    clean-command: @"
      nmake /f makefile.w2k clean
    ";
}